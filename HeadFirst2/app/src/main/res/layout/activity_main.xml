<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bridgelabz.headfirst2.MainActivity">

    <TextView
        android:text="Sam"
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_phone"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:layout_below="@id/contact_name"
        android:text="111-222-3333"
        android:layout_alignLeft="@id/contact_name"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Contact"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/contact_phone"
        android:layout_alignLeft="@+id/contact_phone"
        android:layout_alignStart="@+id/contact_phone"
        android:id="@+id/update_contact"
        android:onClick="onUpdateContact"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/contact_photo"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="46dp"
        android:layout_alignTop="@+id/contact_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:background="#aaa"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am cool"
        android:id="@+id/i_am_cool"
        android:layout_centerInParent="true" />
</RelativeLayout>
