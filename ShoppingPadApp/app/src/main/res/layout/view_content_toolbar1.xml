<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/toolbar_color"
        android:id="@+id/viewContentToolbar1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="4dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/facebook_f_logo"
            android:id="@+id/imageBtn1"
            android:layout_marginStart="40dp"

            android:layout_marginTop="10dp"
            android:onClick="onImageBtnClicked"
            android:clickable="true"/>



        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/view"
            android:id="@+id/imageBtn2"
            android:layout_marginStart="40dp"
            android:layout_toRightOf="@+id/imageBtn1"
            android:layout_marginTop="10dp"
            android:onClick="onImageBtnClicked"
            android:clickable="true" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/share"
            android:id="@+id/imageBtn3"
            android:layout_marginStart="40dp"
            android:layout_toRightOf="@+id/imageBtn2"
            android:layout_marginTop="10dp"
            android:onClick="onImageBtnClicked"
            android:clickable="true"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/message"
            android:id="@+id/imageBtn4"
            android:scaleType="fitXY"
            android:layout_marginStart="40dp"
            android:layout_toRightOf="@+id/imageBtn3"
            android:layout_marginTop="10dp"
            android:onClick="onImageBtnClicked"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOC"
            android:textSize="13dp"
            android:id="@+id/textView1"
            android:paddingBottom="3dp"
            android:layout_below="@+id/imageBtn1"
            android:layout_alignStart="@+id/imageBtn1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Views"
            android:textSize="13dp"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/textView1"
            android:layout_alignStart="@+id/imageBtn2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textSize="13dp"
            android:id="@+id/textView3"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignStart="@+id/imageBtn3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="13dp"
            android:id="@+id/textView4"
            android:layout_below="@+id/imageBtn4"
            android:layout_toRightOf="@+id/textView3"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
        </android.support.v7.widget.Toolbar>




