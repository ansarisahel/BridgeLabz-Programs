<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_view2_text"
        android:id="@+id/cardViewTextView1"
        android:textColor="@android:color/black"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:textColor="@android:color/black"
            android:layout_below="@+id/cardViewTextView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:scrollbars="vertical"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardViewEditText1"
            android:layout_below="@+id/spinner"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:inputType="numberDecimal"
            android:ems="3"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/cardViewEditText2"
            android:layout_alignBottom="@+id/cardViewEditText1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:hint="Phone Number" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:id="@+id/cardViewSendMessageButton"
            android:layout_alignBottom="@+id/cardViewEditText2"
            android:layout_toEndOf="@+id/cardViewEditText2"
            android:onClick="onSendMessageButtonClicked"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>