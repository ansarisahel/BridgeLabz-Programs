<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.siyamed.shapeimageview.CircularImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/facebook_f_logo"
        android:id="@+id/content_fragment_imageView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:siBorderColor="#fff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Content Title 1"
        android:textColor="@android:color/black"
        android:id="@+id/content_fragment_textView1"
        android:layout_alignTop="@+id/content_fragment_imageView"
        android:layout_toEndOf="@+id/content_fragment_imageView"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="opened"
        android:id="@+id/content_fragment_textView2"
        android:layout_below="@+id/content_fragment_textView1"
        android:layout_alignStart="@+id/content_fragment_textView1"
        android:paddingLeft="20dp"
        android:textColor="#1D0E50"
        android:textSize="12dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/content_fragment_imageView1"
        android:src="@drawable/share"
        android:layout_alignTop="@+id/content_fragment_textView1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Views"
        android:id="@+id/content_fragment_imageView3"
        android:textColor="@color/contentFragmentTextColor"
        android:layout_alignTop="@+id/content_fragment_textView1"
        android:layout_toStartOf="@+id/content_fragment_imageView1"
        android:textSize="12dp"
        android:paddingRight="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="participants"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/content_fragment_imageView4"
        android:textColor="@color/contentFragmentTextColor"
        android:layout_below="@+id/content_fragment_textView1"
        android:layout_toStartOf="@+id/content_fragment_imageView1"
        android:textSize="12dp"
        android:paddingRight="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todat at 10 AM"
        android:id="@+id/textView"
        android:layout_below="@+id/content_fragment_textView1"
        android:layout_toRightOf="@id/content_fragment_textView2"
        android:paddingLeft="12dp"
        android:textColor="@color/contentFragmentTextColor"
        android:textSize="12dp"
        android:textStyle="bold" />

</RelativeLayout>